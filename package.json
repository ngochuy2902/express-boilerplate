{
  "name": "ananas-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "yarn clean && yarn ormconfig:dev && yarn migration:run && yarn seed:default && yarn ormconfig:start && yarn build && yarn serve",
    "dev": "yarn ormconfig:dev && yarn migration:run && yarn seed:default && nodemon",
    "clean": "rm -rf dist",
    "build": "tsc",
    "serve": "node dist/src/index.js",
    "check:style": "yarn prettier -w 'src/**' && yarn eslint 'src/**'",
    "ormconfig:dev": "rm -rf ormconfig.ts && cp ormconfig-dev.ts ormconfig.ts",
    "ormconfig:start": "rm -rf ormconfig.ts && cp ormconfig-start.ts ormconfig.ts",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -d src/database/migration -n",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create -d src/database/migration -n",
    "migration:run": "yarn baseEntity && ts-node node_modules/.bin/typeorm migration:run && yarn activeEntity",
    "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert",
    "baseEntity": "cp src/entity/base-migration.entity.ts src/entity/base.entity.ts",
    "activeEntity": "cp src/entity/base-active.entity.ts src/entity/base.entity.ts",
    "seed": "yarn clean && ts-node ./node_modules/typeorm-seeding/dist/cli.js seed -s",
    "seed:default": "yarn baseEntity && yarn seed CreateDefaultUser && yarn activeEntity"
  },
  "author": "huyhn",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "fs": "^0.0.1-security",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "node-cron": "^3.0.1",
    "nodemon": "^2.0.15",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.45",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.23",
    "@types/node-cron": "^3.0.1",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
